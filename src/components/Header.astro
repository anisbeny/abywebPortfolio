---

import removeTrailingSlash from "@/utils/removeTrailingSlash";
import { Image } from "astro:assets";
import myProfile  from "@/data/myProfile";


const pathname = removeTrailingSlash(Astro.url.pathname);
---
<header class="flex w-full  p-sp-64 lg:mb-sp-32 flex-col gap-2 md:flex-row md:justify-between">

    <a href="/">
      {
          myProfile.logo &&(
              <Image
                src={myProfile.logo}
                alt="Logo ABY webcrea"
                width={200}
                height={100}
              />
          )
      }
   </a> 

  
    <nav role="navigation">
     <ul role="list" class="flex flex-row gap-2 text-xl md:text-xl">
        <li>
          <a
            href="/"
            class:list={{
              ["hover:text-violet-600"]: true,
              ["text-zinc-900/95"]: pathname === "/",
            }}>Accueil</a
          >
        </li>
        <li>/</li>
        <li>
          <a
            href="/posts"
            class:list={{
               ["hover:text-violet-600"]: true,
              ["text-zinc-900/95"]: pathname === "/posts",
            }}>Blog</a
          >
        </li>
       
        
      </ul> 
    </nav>
   
</header>
