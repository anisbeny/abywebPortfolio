---
import formatDate from "@/utils/formatDate";
type Props = {
  title: string;
  publishedAt: Date;
  description: string;
  slug: string;
};

const { title, publishedAt, description, slug } = Astro.props;
---

  <a
  class="group  overflow-hidden bg-zinc-150 flex flex-col gap-2  cursor-pointer  border border-zinc-600/25 p-4 transition-all duration-300 rounded-md hover:-translate-y-2 hover:border-violet-600"
  href={`/posts/${slug}`}
>
  <div
    class=" group flex w-full flex-col justify-between gap-2 md:flex-row md:items-center"
  >
    <h3 class="font-title text-zinc-900/80 text-xl md:text-2xl lg:text-3xl">{title}</h3>
    <div class="flex flex-row items-center md:self-start gap-4">
      <p class="text-zinc-600/80">{formatDate(publishedAt)}</p>

      <svg
        width="18"
        height="18"
        viewBox="0 0 18 18"
        fill="none"
        class="transition-all duration-300 group-hover:translate-x-1 group-hover:stroke-violet-600"
      >
        <path
          d="M5.25 12.75L12.75 5.25"
          stroke="#52525bcc"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="group-hover:stroke-violet-600"></path>
        <path
          d="M5.25 5.25H12.75V12.75"
          stroke="#52525bcc"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="group-hover:stroke-violet-600"></path>
      </svg>
    </div>
  </div>

  <p class="truncate text-zinc-600/80 text-sm">
    {description}
  </p>
</a>

