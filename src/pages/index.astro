    {posts.length === 0 && <p>Prochainement, restez connect√©üëÄ...</p>}

  <div class="grid  gap-4 lg:grid-cols-2" >

      {
        posts.length !== 0 &&
          posts
            .slice(0, 2)
            .map((post) => (
              <PostCard 
                publishedAt={post.data.publishedAt}
                title={post.data.title}
                description={post.data.description}
                slug={post.slug}
              />
            ))
      }
  </div>
  
